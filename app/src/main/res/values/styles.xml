<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.NineTwoThree.CardView" parent="Widget.MaterialComponents.CardView" />

    <style name="Widget.NineTwoThree.CardView.ListItem">
        <item name="cardBackgroundColor">@color/nineTwoThreeWhite</item>
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NineTwoThree.MediumComponent</item>
    </style>

    <style name="Widget.NineTwoThree.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.NineTwoThree.SmallComponent</item>
        <item name="elevation">2dp</item>

        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/nineTwoThreeWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.NineTwoThree.Body1</item>

        <item name="android:background">@drawable/main_btn_bg_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.NineTwoThree.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:minWidth">24dp</item>
        <item name="minHeight">24dp</item>

        <item name="strokeWidth">0dp</item>

        <item name="android:background">@drawable/main_btn_bg_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.NineTwoThree.Button.IconOnly.Search">
        <item name="icon">@drawable/ic_pinpoint</item>
        <item name="background">@drawable/main_btn_bg_gradient</item>
    </style>

    <style name="Widget.NineTwoThree.TextInputLayout.Search" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="boxBackgroundColor">@color/nineTwoThreeWhite</item>
        <item name="boxStrokeWidth">0dp</item>

        <item name="startIconDrawable">@drawable/ic_pin</item>
        <item name="startIconTint">@color/nineTwoThreeMain</item>

        <item name="colorControlActivated">@color/nineTwoThreeMain</item>
    </style>

    <style name="Widget.NineTwoThree.TextInputEditText" parent="">
        <item name="android:textAppearance">@style/TextAppearance.NineTwoThree.Subtitle2</item>
    </style>

    <style name="Widget.NineTwoThree.TextInputEditText.Search">
        <item name="android:background">@color/nineTwoThreeWhite</item>
    </style>

    <style name="ShapeAppearance.NineTwoThree.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="Widget.NineTwoThree.TextButton.Phone" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/action_back</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/nineTwoThreeWhite</item>
        <item name="icon">@drawable/ic_chevron_left</item>
        <item name="iconTint">@color/nineTwoThreeWhite</item>
    </style>

</resources>